  <!-- Konten Utama -->
  <div class="container my-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h1 class="text-center mb-4">Sistem Keamanan ShopX</h1>
        <div class="alert alert-info mb-5">
          <p class="mb-0"><i class="fas fa-shield-alt me-2"></i>ShopX mengutamakan keamanan data pengguna dengan standar industri terkini dan teknologi enkripsi berlapis</p>
        </div>
